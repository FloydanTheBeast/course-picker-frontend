{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"baseUrl": "./src",
		"experimentalDecorators": true
	},
	"paths": {
		"react-star-ratings": ["./types"],
		"components": ["./components/"],
		"pages": ["./pages/"],
		"api": ["./api/"],
		"providers": ["./providers/"],
		"services": ["./services/"],
		"icons": ["../assets/icons/"],
		"fonts": ["../assets/fonts/"]
	},
	"exclude": ["node_modules"]
}
